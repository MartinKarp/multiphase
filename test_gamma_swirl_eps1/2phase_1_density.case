{
    "version": 1.0,
    "case": {
        "mesh_file": "20x20.nmsh",
        "output_boundary": false,
        "output_at_end": false,
        "end_time": 3.9999999,
        "timestep": 0.001,
        "output_directory":"gamma_0.05",
        "output_checkpoints": false,
        "numerics": {
            "time_order": 3,
            "polynomial_order": 7,
            "dealias": true
        },
        "fluid": {
            "scheme": "pnpn",
            "freeze":true, //Move in usercheck, usercheck after fluid step
            "initial_condition": {
                "type": "uniform",
                "value": [
                    0.0,
                    0.0,
                    0.0
                ]
            },
            "velocity_solver": {
                "type": "cg",
                "preconditioner": "jacobi",
                "projection_space_size": 0,
                "absolute_tolerance": 1e-9,
                "max_iterations": 800
            },
            "pressure_solver": {
                "type": "gmres",
                "preconditioner": "hsmg",
                "projection_space_size": 0,
                "absolute_tolerance": 1e-3,
                "max_iterations": 800
            },
            "output_control": "simulationtime",
            "output_value": 0.09999999,
        },
        "scalar": {
            "enabled": true,
            "epsilon": 0.01,//eps = 1.4*deltaX
            "gamma": 0.05,
            "source_terms": [
                {
                    "type": "user_vector"
                }
            ],
            "initial_condition": {
                "type": "user"
            },
            "solver": {
                "type": "cg",
                "preconditioner": "jacobi",
                "projection_space_size": 0,
                "absolute_tolerance": 1e-9,
                "max_iterations": 800
            },
        }
    }
}
